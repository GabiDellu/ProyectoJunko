                            <form>
                                <label for="cantidad1"></label> 
                                <input type="number" id="cantidad1" name="cantidad" min="1" max="100" step="1" value="1" autofocus required>
                            </form>
                        </div>
                        <div>
                            <h3>$1799,99</h3>
                        </div>
                        <div>
                            <img src="../../img/icons/delete_trash.svg" alt="eliminar funko seleccionado">
                        </div>  
                    </article>
                </li>  
            </ul>    
        </section>
        <h1 class="listado__carrito-titulo der">RESUMEN</h1>

        <section class="listado__carrito-resume">             
            <article>
                <ul >
                    <li class="listado__carrito-resumeli">
                        <h3 class="card-item__licence"><strong>CANTIDAD DE ELEMENTOS</strong></h3>
                        <p class="card-item__price">3</p>
                    </li>
                    <li class="listado__carrito-resumeli">
                        <h3 class="card-item__licence"><strong>SUBTOTAL</strong></h3>
                        <p class="card-item__price">$5.399,97</p>
                    </li>
                    <li class="listado__carrito-resumeli">
                        <h3 class="card-item__licence"><strong>ENVIO</strong></h3>
                        <p class="card-item__price">$0,00</p>
                    </li>
                    <li class="listado__carrito-resumeli redline">
                        <h3 class="card-item__name"><strong>TOTAL</strong></h3>
                        <p class="card-item__price">$5.399,97</p>
                    </li>
                </ul>                
            </article>
        </section>
        <button class="formulario__boton car__boton" type="button" value="Ingresar" onclick="">IR A PAGAR</button>

    </main> 
    <%- include('../partials/footer') %>
